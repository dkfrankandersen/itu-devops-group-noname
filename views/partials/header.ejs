<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/view/public">Minitwit</a>
        <% if (locals.loggedin) { %>
        <a class="navbar-brand" href="/view/home">Home</a>
        <% } %>
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <% if (locals.loggedin) { %>
                <%- include('./newmessage.ejs'); %>
                <% } %>
            </li>
        </ul>

        <% if (locals.loggedin) { %>
        <form class="form-inline my-2 my-lg-0" action="/view/logout" method="GET">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Logout</button>
        </form>

        <% } else { %>
        <form class="form-inline my-2 my-lg-0" action="/view/signup" method="GET">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Sign up</button>
        </form>
        <form class="form-inline my-2 my-lg-0" action="/view/login" method="GET">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Login</button>
        </form>
        <% } %>
    </nav>
</body>

</html>