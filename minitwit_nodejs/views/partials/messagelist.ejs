<ul class=messages>
    <% if (locals.messages) { %>
    <% messages.forEach( msg => { %>
    <p>
        <img class="avatar" src="/user.png">
        <strong><a href="/view/user/<%= msg.user.username %>"><%= msg.user.username %></a></strong>
        <br>
        <%= msg.text %>
        <small>&mdash; <%= msg.createdAt %></small>
        <% }) %>
        <% } else { %>
        <em>There's no message so far.</em>
    </p>
    <% } %>
</ul>